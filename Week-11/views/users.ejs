<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Users List</title>
  <style>
    table {
      width: 100%;
      border-collapse: collapse;
    }
    table, th, td {
      border: 1px solid black;
    }
    th, td {
      padding: 8px;
      text-align: left;
    }
    .detail {
      text-decoration: none;
      background-color: black;
      padding: 5px 10px;
      border-radius: 5px;
      color: white;
    }
  </style>
</head>
<body>
  <h1>Users List</h1>
  <table>
    <thead>
      <tr>
        <th>ID</th>
        <th>First Name</th>
        <th>Last Name</th>
        <th>Username</th>
        <th>Email</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      <% users.forEach(user => { %>
        <tr>
          <td><%= user.id %></td>
          <td><%= user.first_name %></td>
          <td><%= user.last_name %></td>
          <td><%= user.username %></td>
          <td><%= user.email %></td>
          <td><a href="/user/<%= user.id %>" class="detail">Detail</a></td>
        </tr>
      <% }) %>
    </tbody>
  </table>
</body>
</html>
